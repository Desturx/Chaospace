    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Run",
            "command": "cmake",
            "args": [".", "-B./build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile",
            "command": "make",
            "args": ["-C", "./build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile all",
            "command": "make all",
            "args": ["-C", "./build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run game",
            "command": "./bin/Chaospace",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clear CMake F&F",
            "command": "rm",
            "args": ["-r", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}